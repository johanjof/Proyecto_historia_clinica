# Configuración de Base de Datos
# Copia este archivo como .env y completa con tus credenciales reales

# Host de la base de datos
DB_HOST=tu-host-de-base-de-datos

# Usuario de la base de datos
DB_USER=tu-usuario

# Contraseña de la base de datos  
DB_PASS=tu-contraseña

# Nombre de la base de datos
DB_NAME=Proyecto_historia_clinica

# Puerto de la base de datos (generalmente 3306 para MySQL)
DB_PORT=3306

# Entorno de la aplicación (development, production, testing)
APP_ENV=development

# Configuraciones adicionales para el futuro
APP_NAME="Sistema Historia Clínica"
APP_URL=http://localhost
APP_DEBUG=true

# Configuración de email (para futuras funcionalidades)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# Configuración de seguridad
SESSION_LIFETIME=120
HASH_ALGORITHM=bcrypt